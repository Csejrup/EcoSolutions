<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="321.0" prefWidth="509.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecosolutions.presentation.controllers.DriverController">
   <children>
      <BorderPane layoutX="-3.0" prefHeight="321.0" prefWidth="516.0">
         <left>
            <Pane prefHeight="321.0" prefWidth="155.0" style="-fx-background-color: #eeeeee;" BorderPane.alignment="CENTER">
               <children>
                  <JFXCheckBox fx:id="checkBoxUp" layoutX="15.0" layoutY="14.0" text="Picked Up" onAction="#changeStatus">
                     <font>
                        <Font name="Myanmar Text" size="12.0" />
                     </font>
                  </JFXCheckBox>
                  <JFXCheckBox fx:id="checkBoxDeliv" layoutX="14.0" layoutY="43.0" text="Delivered" onAction="#statusDelivered">
                     <font>
                        <Font name="Myanmar Text" size="12.0" />
                     </font>
                  </JFXCheckBox>
                  <JFXButton fx:id="btnLogOut" layoutX="23.0" layoutY="208.0" onAction="#handleLogOut" prefHeight="37.0" prefWidth="116.0" style="-fx-background-color: #b90808; -fx-background-radius: 50px;" text="Log Out" textFill="WHITE">
                     <font>
                        <Font name="Myanmar Text Bold" size="12.0" />
                     </font>
                  </JFXButton>
               </children>
            </Pane>
         </left>
         <top>
            <Pane prefHeight="62.0" prefWidth="516.0" style="-fx-background-color: #b90808;" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" layoutX="-11.0" layoutY="7.0" prefHeight="48.0" prefWidth="181.0" style="-fx-background-color: #b90808;" text="Update Order" textFill="WHITE">
                     <font>
                        <Font name="Myanmar Text" size="20.0" />
                     </font>
                  </Label>
                  <Label layoutX="245.0" layoutY="7.0" text="List of Active Orders" textFill="WHITE">
                     <font>
                        <Font name="Myanmar Text" size="20.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </top>
         <center>
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="ordernoCol" editable="false" prefWidth="75.0" sortable="false" text="Order Number" />
                <TableColumn fx:id="ordstatCol" editable="false" prefWidth="75.0" sortable="false" text="Order Status" />
                  <TableColumn fx:id="locaCol" editable="false" prefWidth="75.0" sortable="false" text="Location" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
